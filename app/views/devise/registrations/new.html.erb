<h4 class="ui center aligned mdedium icon header">
  <i class="circular power off blue icon"></i>
  Sign Up!
</h4>

<div class="ui placeholder segment">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "ui form" }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :email %><br />
      <div class="ui left icon input">
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      <i class="envelope icon"></i>
      </div>
    </div>

    <div class="field">
      <%= f.label :password %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <div class="ui left icon input">
        <%= f.password_field :password, autocomplete: "new-password" %>
        <i class="lock icon"></i>
      </div>
    </div>

    <div class="field">
      <%= f.label :password_confirmation %><br />
      <div class="ui left icon input">
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        <i class="lock icon"></i>
      </div>
    </div>

    <div class="actions">
      <%= f.submit "Sign up", class:"ui blue submit button" %>
    </div>
  <% end %>
</div>
<div class="ui middle aligned center aligned grid">
    <div class="column">
      <%= render "devise/shared/links" %>
    </div>
</div>
