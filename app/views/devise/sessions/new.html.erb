<h4 class="ui center aligned mdedium icon header">
  <i class="circular power off blue icon"></i>
  Log In!
</h4>

<div class="ui placeholder segment">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "ui form" }) do |f| %>
    <div class="field">
      <%= f.label :email %>
      <div class="ui left icon input">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email" %>
        <i class="envelope icon"></i>
      </div>
    </div>

    <div class="field">
      <%= f.label :password %>
      <div class="ui left icon input">
        <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password" %>
        <i class="lock icon"></i>
      </div>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field">
        <div class="ui checkbox">
          <%= f.check_box :remember_me, class: "hidden" %>
          <%= f.label :remember_me, class: "ui" %>
        </div>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "Log In", class:"ui blue submit button" %>
    </div>
  <% end %>
</div>

<div class="ui middle aligned center aligned grid">
    <div class="column">
      <%= render "devise/shared/links" %>
    </div>
  </div>

